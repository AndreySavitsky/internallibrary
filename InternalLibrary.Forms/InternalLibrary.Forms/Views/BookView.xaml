<views:ViewBase
    xmlns:views="clr-namespace:InternalLibrary.Forms.Views"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="InternalLibrary.Forms.Views.BookView">
    <ContentPage.Content>
        <StackLayout>

            <WebView Source="{Binding Book.URL}"
                     VerticalOptions="FillAndExpand"/>
            <Button Text="Request book"
                    Command="{Binding RequestBookCommand}"/>

        </StackLayout>
    </ContentPage.Content>
</views:ViewBase>
